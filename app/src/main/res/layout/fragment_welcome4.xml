<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvJournal"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="220dp"
        android:fontFamily="georgia"
        android:gravity="center_horizontal"
        android:lines="3"
        android:text="@string/welcome4_description"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvQuote"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="georgia"
        android:gravity="center_horizontal"
        android:lines="3"
        android:text="@string/welcome4_description2"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJournal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuote">

        <ImageView
            android:id="@+id/quote_box"
            android:layout_width="316dp"
            android:layout_height="87dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/quote_box"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/Quote1"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="18dp"
            android:fontFamily="georgia"
            android:gravity="center_horizontal"
            android:lines="3"
            android:text="&#34;Do what you can, with what you've got, where you are.&#34; - Theodore Roosevelt"
            android:textAlignment="center" />

        <ToggleButton
            android:id="@+id/starButton"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_gravity="end"
            android:layout_marginTop="33dp"
            android:layout_marginRight="57dp"
            android:background="@drawable/favorite_star"
            android:textOff=""
            android:textOn="" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>